
<!-- We don't always have what is passed from controller, but we still want to work with Category model so we will use model Category -->
<!-- However if it's passed from controller it must match what you have inside the model in View -->
@model CoverType

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Cover Type</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<!-- asp-for displays the name of the property inside our Category model (Name will display in UI) -->
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<button type="submit" class="btn-primary btn" style="width:150px">Update</button>
		<a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
	</div>
</form>

<!-- CLIENT SIDE VALIDATION -->
<!-- create a section for scripts -->
@section Scripts{
	@{
	<partial name="_ValidationScriptsPartial" />
	}
}

