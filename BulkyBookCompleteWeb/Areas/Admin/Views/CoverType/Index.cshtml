@model IEnumerable<CoverType>


<div class="container p-3">
     <div class="row pt-4">
         <div class="col-6">
             <h2 class="text-primary">CoverType List</h2>
         </div>
         <div class="col-6 text-end">
             <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                 <i class="bi bi-plus-circle"> Create New CoverType</i>
             </a>
         </div>       
     </div>
</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                CoverType Name
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        <!-- We will need foreach to go through IEnumerable<Category> -->
        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.Name
                </td>
                <td width="15%">
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                </td>
                <td width="15%">
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-x-circle"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

